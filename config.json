{
  "hotword": "aura",
  "hotword_detection": {
    "model_path": "models/hotword_model.pth",
    "threshold": 0.7,
    "sample_rate": 16000,
    "window_size": 0.5,
    "hop_length": 0.1
  },
  "sound_events": [
    "Shout",
    "Scream",
    "Crying, sobbing",
    "Groan",
    "Pain",
    "Laugh",
    "Sigh",
    "Whisper",
    "Silence"
  ],
  "sound_event_detection": {
    "model": "models/yamnet_model",
    "threshold": 0.5,
    "min_duration": 0.5
  },
  "emotion_detection": {
    "voice": {
      "enabled": true,
      "model": "models/voice_emotion_model.pth",
      "threshold": 0.6
    },
    "face": {
      "enabled": true,
      "model": "models/face_emotion_model.pth",
      "confidence_threshold": 0.7
    }
  },
  "database": {
    "path": "data/aura.db",
    "backup_interval": 3600
  },
  "ui": {
    "theme": "dark",
    "colors": {
      "primary": "#4CAF50",
      "secondary": "#2196F3",
      "background": "#1E1E1E"
    }
  },
  "proactive_behaviors": {
    "sound_events": true,
    "emotion_detection": true
  }
} 